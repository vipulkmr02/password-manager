  {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Deno Debug",
        "type": "pwa-node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "deno",
        "runtimeArgs": [
          "run",
          "--inspect-brk",
          "--allow-all",
          "./src/main.ts"
        ],
        "port": 9229,
        "attachWaitTime": 30000,
        "timeout": 30000,
        "console": "integratedTerminal",
        "internalConsoleOptions": "open",
        "skipFiles": [
          "<node_internals>/**"
        ]
      }
    ]
  }
